{

    "manifest_version": 2,
    "name": "Screenshot",
    "version": "1.0",
    "description": "Capture your webpage",

    "browser_action":
    {
        "default_icon": "icons/cam_logo.png",
        "default_popup": "popup.html"
    },

    "commands":
    {
        "_execute_browser_action": 
        {
            "suggested_key":
            {
              "default": "Alt+Shift+P"
            }
        }
    },

    "permissions": ["activeTab"],
    "icons": 
    {
        "32": "icons/cam_logo_32.png",
        "48": "icons/cam_logo_48.png",
        "128": "icons/cam_logo_128.png",
        "256": "icons/cam_logo_256.png"
    }

}