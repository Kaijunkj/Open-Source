{
  "version": "1",
"manifest_version": 2,
"name": "Tab Auto Refresh",
"short_name": "tabautorefresh",
"background": {"page": "lib/chrome/background.html"},
"permissions": ["tabs", "storage", "<all_urls>", "notifications"],
"description": "Automatically refresh tabs based on custom time intervals",
"browser_action": {
  "default_title": "Tab Auto Refresh",
  "default_popup": "data/popup/popup.html",
  "default_icon": {"16": "data/icons/16.png", "32": "data/icons/32.png"}
},
"icons": {
  "16": "data/icons/16.png",
  "32": "data/icons/32.png",
  "48": "data/icons/48.png",
  "64": "data/icons/64.png",
  "128": "data/icons/128.png"
}
}