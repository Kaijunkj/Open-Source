{
    "version": "1",
    "manifest_version": 2,
    "name": "Tab Auto Refresh",
    "short_name": "tabautorefresh",
    "background": {"page": "lib/chrome/background.html"},
    "permissions": ["tabs", "storage", "<all_urls>", "notifications"],
    "description": "Automatically refresh tabs based on custom time intervals",
    "browser_action": {
      "default_title": "Tab Auto Refresh",
      "default_popup": "popup/popup.html",
      "default_icon": {"16": "icons/16.png", "32": "icons/32.png"}
    },
    "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  }
  